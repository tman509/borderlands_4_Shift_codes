# Copy this to .env and fill values. Do NOT commit your real .env.

# Database configuration
DB_PATH=./shift_codes.db

# Webhook notifications (fill to enable)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Reddit API credentials (optional - remove if not using Reddit)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=borderlands4-shift-bot/1.0
REDDIT_SUBS=shiftcodes,Borderlands,borderlands3,BorderlandsGuns

# HTML sources to scrape (comma-separated URLs)
HTML_SOURCES=https://shift.orcicorn.com/,https://mentalmars.com/game-news/borderlands-3-golden-keys/

# SHiFT code redemption URL
REDEEM_URL=https://shift.gearboxsoftware.com/rewards

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO